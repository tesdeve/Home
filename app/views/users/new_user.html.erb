<% provide(:page_title, 'Sign up') %>
<% provide(:sign_up_active, 'active') %>
<div class="container h-100"> <!-- This div and the one below will do center the card -->
  <div class="row h-100 justify-content-center align-items-center"> 
    <div class="card  signup-card text-center">

      <h2>Sign up</h2>

          <% if @token != nil %>
           <%= hidden_field_tag :invite_token, @token %>
           <%= @token %>

       <%#= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
