<% if current_user %>
	<% if  Engagement.where({building_id: @building.id, user_id: current_user.id, role: 'admin'}).count > 0 %>
		<h6 class="card-title  my-5">Su Role principal es: Administrador <%#= @engagements[0].role.titleize %></h6>
	<% elsif Engagement.where({building_id: @building.id, user_id: current_user.id, role: 'seguridad'}).count > 0 %>
		<h6 class="card-title  my-5">Su Role principal es: Seguridad</h6>
	<% else %>
		<h6 class="card-title  my-5">Su Role principal es: Algo </h6>
	<% end %> 
<% end %>