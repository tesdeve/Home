<% provide(:page_title, 'Entes Residenciales') %>
<% provide(:entes_residenciales_active, 'active') %>

<% content_for(:sidebar) do %>
  <%= render 'layouts/sidebar' %>
<% end %>

<div class="col-md-8 col-md-offset-3 bigContainer">
  <h4 class='mb-4 indexTitle text-center'>Entes Residenciales</h4>
    <div class="buildingMenu"> 
    <div class="my-2 py-2">
      <nav class="nav">
        <ul class="nav nav-pills">
          <%# if @building.engagements.where(user_id: current_user.id, access: 'admin').present? %> 
            <li class="nav-item">
              <%= link_to 'Crear Ente Residencial', new_building_path, class: "nav-link mr-2 tableroMandoLink" %> 
            </li>
          <%# end %>
        </ul>
      </nav>
    </div> 
  </div>

  <%#= link_to 'Crear Ente Residencial', new_building_path %>
 
  <div class="table table-responsive"> 
    <div class="indextable">
      <table class="table table-hover">  
        <thead>
          <tr>
            <th> Nombre </th>
            <th> Tipo </th>
            <th> Creador </th>
           
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @buildings.each do |building| %>
            <tr>
              <td><%= building.name.titleize %></td>
              <td><%= building.buildingtype.titleize%></td>
              <td><%= building.users[0].email.titleize%></td>
              
              <td><%= link_to 'Show', building %></td>
              <!-- Check if current user has any engagement with Admin role 2B Moved to a partial-->
              <% if building.engagements.where(user_id: current_user.id, access: 'admin').present? %> 
                <td><%= link_to 'Edit', edit_building_path(building) %></td>  
                <td><%= link_to 'Destroy', building, method: :delete, data: { confirm: 'Are you sure?' } %></td>
              <% else %>
                <td></td>
                <td></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>

  <%#= link_to 'Crear Ente Residencial', new_building_path, class: "mb-5" %>
</div>
