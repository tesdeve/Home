<%= f.fields_for :engagements,  Engagement.new  do |ff| %>	
	<%= ff.input :building_id, label: "Conjunto #{@building.id}", :as => :hidden, input_html: {value: @building.id} %>
	<%= ff.input :user_id, label: "Usuario #{current_user.id}", :as => :hidden, input_html: {value: current_user.id} %> 
	<%= ff.input :role, label: "Role: #{current_user.role.capitalize}", :as => :hidden, input_html: {value: current_user.role} %>
	<%= ff.input :started_at , :as => :hidden, input_html: {value: @building.created_at} %>
<% end %>


