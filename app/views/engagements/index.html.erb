<h1>Engagements</h1>
<div class="table table-responsive"> 
  <div class="indextable">
    <table class="table table-hover">  
      <thead>
        <tr>
          <th>Building</th>
          <th>User Creator</th>
          <th>Role Associated</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @engagements.each do |engagement| %>
          <tr>
            <td><%= engagement.building.name.capitalize %></td>  <!-- .building_id -->
            <td><%#= engagement.user.role.capitalize %></td>  <!-- user_id -->
            <td><%= engagement.role.capitalize  %></td>
            <td><%#= link_to 'Show', [@building, engagement] %></td>
            <td><%#= link_to 'Edit', edit_building_engagement_path(@building, engagement) %></td>
            <td><%#= link_to 'Destroy', [@building, engagement], method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

