<h1>Engagements</h1>
<div class="table table-responsive"> 
  <div class="indextable">
    <table class="table table-hover">  
      <thead>
        <tr>
          <th>Building</th>
          <th>User</th>
          <th>Role</th>
          <th colspan="3"></th>
        </tr>
      </thead>
      <tbody>
        <% @engagements.each do |engagement| %>
          <tr>
            <td><%= engagement.building.name.capitalize %></td>  <!-- .building_id -->
            <td><%= engagement.user.role.capitalize %></td>  <!-- user_id -->
            <td><%= engagement.role %></td>
            <td><%= link_to 'Show', engagement %></td>
            <td><%= link_to 'Edit', edit_engagement_path(engagement) %></td>
            <td><%= link_to 'Destroy', engagement, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>

<br>

<%= link_to 'New Engagement', new_engagement_path %>
